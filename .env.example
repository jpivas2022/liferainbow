# =============================================================================
# LIFE RAINBOW 2.0 - Configurações de Ambiente
# =============================================================================
# Copie este arquivo para .env e configure com seus valores

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=sua-chave-secreta-aqui-gere-uma-nova
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# Local
DATABASE_URL=postgresql://user:password@localhost:5432/liferainbow

# Produção (Cloud SQL)
# DATABASE_URL=postgresql://user:password@/liferainbow?host=/cloudsql/project:region:instance

# -----------------------------------------------------------------------------
# OPENAI (GPT-4o-mini para Function Calling)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# WHATSAPP BUSINESS API
# -----------------------------------------------------------------------------
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxx
WHATSAPP_VERIFY_TOKEN=seu-token-de-verificacao

# Meta for Developers: https://developers.facebook.com/apps/

# -----------------------------------------------------------------------------
# REDIS (para Celery)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# Produção
# REDIS_URL=redis://:password@redis-host:6379/0

# -----------------------------------------------------------------------------
# EMAIL (SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Life Rainbow <noreply@liferainbow.com.br>

# -----------------------------------------------------------------------------
# SENTRY (Monitoramento de Erros - Opcional)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxx

# -----------------------------------------------------------------------------
# CORS (Origens permitidas)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# MÍDIA E STATIC FILES
# -----------------------------------------------------------------------------
# Cloud Storage (produção)
# GS_BUCKET_NAME=liferainbow-media

# Local
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static

# -----------------------------------------------------------------------------
# TIMEZONE E LOCALE
# -----------------------------------------------------------------------------
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br
